<Window
    x:Class="Sudoku.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ns_view="clr-namespace:Sudoku.View"
    Title="Mad Sudoku"
    Height="350"
    Width="400"
    xmlns:ns_vm_grid="clr-namespace:Sudoku.ViewModel">
    <Window.Resources>
        <ns_vm_grid:SudokuGridViewModel
            x:Key="vm_grid" />
    </Window.Resources>
    <Grid
        DataContext="{Binding Source={StaticResource vm_grid}}">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Name="btnTempGenerate"
            Content="Generate"
            HorizontalAlignment="Center"
            Margin="5"
            Width="80"
            Height="35"
            Command="{Binding NewPuzzleCommand}" />
        <ns_view:SudokuGridView
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />
    </Grid>
</Window>
