<Window
    x:Class="Sudoku.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ns_view="clr-namespace:Sudoku.View"
    Title="Mad Sudoku"
    Height="350"
    Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Name="btnTempGenerate"
            Content="Generate"
            HorizontalAlignment="Center"
            Margin="5"
            Width="80"
            Height="35"
            Command="{Binding Path=NewPuzzleCommand}" />
        <ns_view:SudokuGridControl
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />
    </Grid>
</Window>
